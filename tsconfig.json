{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "lib"
  },
  "parserOptions": {
    "extraFileExtensions": [".mjs"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "examples"]
}
